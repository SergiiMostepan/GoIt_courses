<li class="card_item status-{{status}}" data-id="{{id}}">
    <div class="top priority-{{importance}}">
        <p class="importance">{{importance}}</p>
    </div>
    <p class="card_text">{{title}}</p>
    <div class="buttons">
        <button class="done" type="submit" data-done="done">Done</button>
        <button class="delete" type="submit" data-delete="delete">Delete</button>
    </div>
</li>